{
    "name": "ezimuel/simple-mvc",
    "type": "project",
    "description": "Simple MVC micro framework",
    "keywords": [
        "framework",
        "simple",
        "mvc"
    ],
    "license": "Apache-2.0",
    "require": {
        "php": ">=7.3",
        "league/plates": "^3.3",
        "php-di/php-di": "^6.0",
        "nikic/fast-route": "^1.3",
        "nyholm/psr7": "^1.3",
        "nyholm/psr7-server": "^1.0",
        "illuminate/database": "^8.14",
        "cartalyst/sentinel": "^5.0",
        "illuminate/events": "^8.14",
        "symfony/http-foundation": "^5.1",
        "laminas/laminas-authentication": "^2.7",
        "laminas/laminas-session": "^2.10"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.4"
    },
    "autoload": {
        "psr-4": {
            "SimpleMVC\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SimpleMVC\\Test\\": "test/"
        }
    },
    "scripts": {
        "test": "phpunit --colors=always",
        "test-coverage": "phpunit --colors=always --coverage-clover clover.xml"
    }
}
